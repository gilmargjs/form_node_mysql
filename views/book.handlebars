<dv id="book-page">
    <a href="/books">Voltar</a>
    <div class="container">
        <h1>{{book.title}}</h1>
        <p>Este livro tem {{book.pageqty}} Paginas.</p>
        <div class="actions">
            <a href="/books/edit/{{book.id}}"class="btn">Editar</a>
            <form action="/books/remove/{{book.id}}" method="POST">
            <input type="submit" value="Remover">
            </form>
        </div>                                                                                                                                                                                                                                                                                                                                      
    
    </div>
</dv>