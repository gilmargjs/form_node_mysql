

<form action="/books/insertbook" method="POST" class="form">
    <h1>Cadastre o Seu Livro</h1>
    <div class="form-control">
        <label for="title">Título:</label>
        <input type="text" name="title" id="" placeholder="Título do Livro">
    </div>
    <div class="form-control">
        <label for="pageqty">Autor:</label>
        <input type="text" name="autor" id="" placeholder="Nome do Autor">
    </div>
    <div class="form-control">
        <label for="pageqty">Paginas:</label>
        <input type="number" name="pageqty" id="" placeholder="Nº de Paginas">
    </div>
    <input type="submit" value="Cadastrar" class="btn">
    
</form>
